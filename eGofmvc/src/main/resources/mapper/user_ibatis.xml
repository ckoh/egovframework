<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE sqlMap PUBLIC "-//ibatis.apache.org//DTD SQL Map 2.0//EN" "http://ibatis.apache.org/dtd/sql-map-2.dtd" >
<sqlMap>

	<!-- <typeAlias alias="user" type="user.vo.UserVO"/> -->

	<select id="getRowLogin" parameterClass="user.vo.UserVO" resultClass="user.vo.UserVO">
		select * from userinfo where userid = #userid# and userpwd
		= #userpwd#
	</select>

	<select id="getRow" parameterClass="user.vo.UserVO" resultClass="user.vo.UserVO">
		select * from userinfo where userid = #userid#
	</select>

	<select id="getGrid" resultClass="user.vo.UserVO">
		select * from userinfo
	</select>

	<insert id="insertRow" parameterClass="user.vo.UserVO">
		insert into userinfo
		(userid,
		username,
		userpwd,
		email,
		phone,
		address) values (
		#userid#,
		#username#,
		#userpwd#,
		#email#,
		#phone#,
		#address#)
	</insert>

	<update id="updateRow" parameterClass="user.vo.UserVO">
		update userinfo set
		email=#email#,phone=#phone#,address=#address# where userid = #userid#
	</update>

	<delete id="deleteRow">
		<!-- parameterClass="string" -->
		delete from userinfo where userid = #userid#
	</delete>

</sqlMap>